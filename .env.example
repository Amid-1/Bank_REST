# .env.example
# Шаблон переменных окружения для локального запуска.

# База данных (PostgreSQL)
POSTGRES_USER=admin
POSTGRES_PASSWORD=secret
POSTGRES_DB=card_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Приложение
APP_PORT=8080

# JWT (секрет для подписи токенов)
JWT_SECRET=dev_jwt_secret_change_me_for_prod_very_long_string_1234567890

# Шифрование PAN (номер карты)
ENCRYPTOR_PASSWORD=dev_encryptor_password
ENCRYPTOR_SALT=dev_encryptor_salt

# Pepper для хеширования PAN (серверный секрет)
APP_HASHENCODER_PEPPER=dev_pepper_change_me_for_prod

# Администратор (создается при старте, если отсутствует)
APP_ADMIN_EMAIL=admin@local
APP_ADMIN_NAME=admin
APP_ADMIN_PASSWORD=change_me_12345678
